<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- CSS for Styling -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
          integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
          crossorigin="anonymous">

    <!-- JavaScript for Interactivity -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
            integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
            crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
            integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
            crossorigin="anonymous"></script>

    <!-- ADDED JavaScript -->
    <script src="javascripts/registerScript.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <form id="register_form" action="register" role="form" method="post">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username" name="username"
               placeholder="Enter your NUSNET username" required="required">
      </div>
      <div>
        <label id="username_invalid" name="username_invalid"
               style="display:none;color:red;font-style:italic;">Invalid username! Use your NUSNET username.</label>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password"
               placeholder="Enter your password" required="required">
      </div>
      <div>
        <label id="password_invalid" name="password_invalid" style="display:none;color:red;font-style:italic;">
          Invalid password! Password must have at least 10 characters.</label>
      </div>
      <div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" id="role" name="role" required="required"
                onchange="onChangeRole()">
          <option value="" disabled="disabled" selected="selected">Select Role</option>
          <option value="Student">Student</option>
          <option value="Admin">Admin</option>
        </select> 
      </div>
      <div class="form-group" id="div-seniority" name="div-seniority" style="display:none;">
        <label for="Year">Year of Study</label>
        <select class="form-control" id="seniority" name="seniority" required="required">
          <option value="" disabled="disabled" selected="selected">Select Year of Study</option>
          <option value="1">Year 1</option>
          <option value="2">Year 2</option>
          <option value="3">Year 3</option>
          <option value="4">Year 4</option>
          <option value="5">Year 5</option>
        </select> 
      </div>
      <div class="form-group" id="div-modules-taken" name="div-modules-taken" style="display:none;">
        <label for="Modules">Modules Taken</label>
        <select multiple="multiple" class="form-control" id="modules_taken" name="modules_taken">
          <!-- <option value="" disabled="disabled" selected="selected">Select Modules Taken</option> -->
          <option value="CS1010">CS1010</option>
          <option value="CS1010J">CS1010J</option>
          <option value="ACC1701">ACC1701</option>
          <option value="CS2102">CS2102</option>
        </select> 
      </div>
      <div class="form-group" id="div-modules-set" name="div-modules-set" style="display:none;">
        <label for="Modules">Modules Set</label>
        <select multiple="multiple" class="form-control" id="modules_set" name="modules_set">
          <!-- <option value="" disabled="disabled" selected="selected">Select Modules Set</option> -->
          <option value="CS1010">CS1010</option>
          <option value="CS1010J">CS1010J</option>
          <option value="ACC1701">ACC1701</option>
          <option value="CS2102">CS2102</option>
        </select> 
      </div>
      <div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <script>
      function onChangeRole() {
        if (document.getElementById('role').value === 'Student') {
          // Hide
          document.getElementById('div-modules-set').style.display = "none";

          // Display
          document.getElementById('div-seniority').style.display = "block";
          document.getElementById('div-modules-taken').style.display = "block";

          // Compulsory to be Filled
          document.getElementById('seniority').required = "required";
        } 
        else if (document.getElementById('role').value === 'Admin') {
          // Hide
          document.getElementById('div-seniority').style.display = "none";
          document.getElementById('div-modules-taken').style.display = "none";

          // Display
          document.getElementById('div-modules-set').style.display = "block";

          // Not compulsory to be Filled
          document.getElementById('seniority').required = "";
        }
      }
    </script>
    <script>
      window.onmousedown = function (event) {
        var eventTarget = event.target;
        if (eventTarget.tagName.toLowerCase() === 'option' &&
          eventTarget.parentNode.hasAttribute('multiple')) {
          event.preventDefault();

          // toggle selection
          if (eventTarget.hasAttribute('selected')) {
            eventTarget.removeAttribute('selected');
          } else {
            eventTarget.setAttribute('selected', '');
          }

          // hack to correct buggy behavior
          var select = eventTarget.parentNode.cloneNode(true);
          eventTarget.parentNode.parentNode.replaceChild(select, eventTarget.parentNode);
        }
      }
    </script>
    <script>
      (function() {
        window.addEventListener('load', function() {
          var forms = [document.getElementById('register_form')];
          var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', check, false);
          })
        });
      })();
    </script>
  </body>
</html>
