<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- CSS for Styling -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
          integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
          crossorigin="anonymous">

    <!-- JavaScript for Interactivity -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
            integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
            crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
            integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
            crossorigin="anonymous"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="form-group">
      <form id="prereq_form" role="form" method="post">
        <h4 id="h4-no-prereqs">This module has no prerequisites.</h4>
        <div class="form-group" id="div-prereqs">
          <label for="children">Prerequisites</label>
          <select multiple="multiple" class="form-control" id="children"
                  name="children" size="<%= 1 + (children.length * 0.5) %>">
            <% children.forEach(child => { %>
              <option value="<%= child.mod_code %>">
                <%= child.mod_code %> <%= child.mod_name %>
              </option>
            <% }); %>
          </select>
        </div>
        <div>
          <button type="submit" class="btn btn-primary btn-block"
                  id="btn-prereqs" onclick="submitChildForm()">Submit</button>
        </div>
      </form>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary"
              onclick="window.location.href='../prereq'">Previous</button>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary"
              onclick="window.location.href='../dashboard_admin'">Back to Home</button>
    </div>
    <div class="form-group">
      <form action="../logout" role="form" method="post">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    </div>
    <script>
      function submitChildForm() {
        const parent = "<%= parent %>";
        window.location.href='../prereq_child/select_child?' + 'parent=' + parent;
      }
    </script>
    <script>
      (function() {
        window.addEventListener('load', function() {
          <% if (children.length === 0) { %>
          document.getElementById('div-prereqs').style.display = "none";
          document.getElementById('btn-prereqs').style.display = "none";
          document.getElementById('h4-no-prereqs').style.display = "block";
          <% } %>
        });
      })();
    </script>
    <script>
      window.onmousedown = function (event) {
        var eventTarget = event.target;
        if (eventTarget.tagName.toLowerCase() === 'option' &&
          eventTarget.parentNode.hasAttribute('multiple')) {
          event.preventDefault();

          // toggle selection
          if (eventTarget.hasAttribute('selected')) {
            eventTarget.removeAttribute('selected');
          } else {
            eventTarget.setAttribute('selected', '');
          }

          // hack to correct buggy behavior
          var select = eventTarget.parentNode.cloneNode(true);
          eventTarget.parentNode.parentNode.replaceChild(select, eventTarget.parentNode);
        }
      }
    </script>
  </body>
</html>
